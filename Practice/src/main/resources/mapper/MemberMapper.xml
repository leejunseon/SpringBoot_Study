<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="practice.mapper.MemberMapper">

	<resultMap type="practice.domain.MemberVO" id="memberMap">
		<result property="userid" column="userid"/>
		<result property="userpw" column="userpw"/>
		<result property="userName" column="username"/>
		<result property="regDate" column="regdate"/>
		<result property="updateDate" column="updatedate"/>
		<collection property="authList" resultMap="authMap">
		</collection>
	</resultMap>
	
	<resultMap type="practice.domain.AuthVO" id="authMap">
		<result property="userid" column="userid"/>
		<result property="auth" column="auth"/>
	</resultMap>
	
	<select id="read" resultMap="memberMap">
		SELECT
			MEM.USERID,USERPW,USERNAME,ENABLED,REGDATE,UPDATEDATE,AUTH
		FROM
			TBL_MEMBER MEM 
			LEFT OUTER JOIN TBL_MEMBER_AUTH AUTH
			ON MEM.USERID=AUTH.USERID
		WHERE
			MEM.USERID=#{USERID}
	</select>
	
	<insert id="insertMember">
		INSERT INTO TBL_MEMBER
			(USERID,USERPW,USERNAME,EMAIL)
		VALUES
			(#{userid},#{userpw},#{userName},#{email})
	</insert>
	
	<insert id="insertAuth">
		INSERT INTO TBL_MEMBER_AUTH
			(USERID,AUTH)
		VALUES
			(#{userid},#{auth})
	</insert>
	
	<select id="getEmail" resultType="Integer">
		SELECT COUNT(*)
		FROM TBL_MEMBER
		WHERE USERID=#{id} AND EMAIL=#{email}
	</select>
	
	<update id="updatePassword">
		UPDATE
			TBL_MEMBER
		SET
			USERPW=#{userpw},
			UPDATEDATE=sysdate
		WHERE
			USERID=#{userid}
	</update>

</mapper>